{
  "openapi": "3.0.3",
  "info": {
    "title": "OpenAPI Documentation",
    "description": "API Spec for OpenAPI Documentation",
    "version": "1.0.0"
  },
  "tags": [{
      "name": "product",
      "description": "Operations about product"
    },
    {
      "name": "category",
      "description": "Operations about categories"
    },
    {
      "name": "orders",
      "description": "Operations about orders"
    },
    {
      "name": "user",
      "description": "Operations about user"
    }
  ],
  "servers": [{
    "url": "http://localhost:3000/api"
  }],
  "paths": {
    "/product": {
      "get": {
        "tags": [
          "product"
        ],
        "summary": "returns all product",
        "description": "returns all product",
        "operationId": "GetProducts",
        "responses": {
          "200": {
            "description": "Get all products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "product"
        ],
        "summary": "create product",
        "description": "create product",
        "operationId": "CreateProduct",
        "requestBody": {
          "description": "Product to add to the store",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateProduct"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "return new product",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CreateProduct"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "product"
        ],
        "summary": "update product",
        "description": "update an existing product",
        "operationId": "UpdateProduct",
        "requestBody": {
          "description": "Product to add to the store",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateProduct"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "succes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateProduct"
                }
              }
            }
          }
        }
      }
    },
    "/category":{
      "post":{
        "tags": [
          "category"
        ],
        "summary": "create category",
        "description": "create category",
        "requestBody":{
          "required": true,
          "content": {
              "application/json":{
                  "schema":{
                      "$ref": "#/components/schemas/CreateCategory"
                  }
              }
          }
      },
        "responses": {
          "200": {
            "description": "succes",
            "content": {
              "application/json": {
                "schema": {
                    "$ref": "#/components/schemas/CreateCategory"
                }
              }
            }
          }
        }
      }
    },
    "/category/{id}":{
      "get":{
        "tags": [
          "category"
        ],
        "summary": "filter product by category id",
        "description": "filter product by category id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema":{
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "succes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Category"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders":{
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "returns all orders",
        "description": "returns all orders",
        "responses": {
          "200": {
            "description": "Get all orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "create user",
        "description": "creates a new user",
        "requestBody":{
            "required": true,
            "content": {
                "application/json":{
                    "schema":{
                        "$ref": "#/components/schemas/CreateOrUpdateUser"
                    }
                }
            }
        },
        "responses": {
          "200": {
            "description": "success create user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateOrUpdateUser"
                }
              }
            }
          }
        }
      }
    },
    "/user/{username}": {
        "put": {
          "tags": [
            "user"
          ],
          "summary": "updated user",
          "description": "this can only be done by the logged in user",
          "requestBody":{
            "required": true,
            "content": {
                "application/json":{
                    "schema":{
                        "$ref": "#/components/schemas/CreateOrUpdateUser"
                    }
                }
            }
        },
          "responses": {
            "200": {
              "description": "succes update user",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/CreateOrUpdateUser"
                  }
                }
              }
            }
          }
        },
        "get":{
          "tags": [
            "user"
          ],
          "summary": "get user",
          "description": "get user by username",
          "parameters": [
            {
              "name": "username",
              "in": "path",
              "required": true,
              "schema":{
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "succes",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/CreateOrUpdateUser"
                  }
                }
              }
            }
          }
        }
      },
    "/user/login": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "logs user into the system",
        "description": "logs user into the system",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "required": true,
            "description": "username for login"
          },
          {
            "name": "password",
            "in": "query",
            "required": true,
            "description": "password for login"
          }
        ],
        "responses": {
          "200": {
            "description": "login succes",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WebResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "data": {
            "type": "object"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CreateProduct": {
        "type": "object",
        "required": [
          "name",
          "price",
          "stock",
          "weight",
          "type",
          "description"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "integer"
          },
          "stock": {
            "type": "integer"
          },
          "weight": {
            "type": "integer"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CreateCategory": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "Orders": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "CreateOrUpdateUser": {
        "type": "object",
        "required": [
          "name",
          "email",
          "username",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "minLength": 8
          }
        }
      }
    }
  }
}